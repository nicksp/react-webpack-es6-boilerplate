# editorconfig.org
root = true

# Defaults for most files & downloaded metadata
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

# Defaults for code files - HTML, VF, Apex, JS, CSS
[*.{css,less,html,js,json,cls,scss,trigger,page,component}]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Don't delete trailing whitespace for Markdown
[*.md]
trim_trailing_whitespace = false
